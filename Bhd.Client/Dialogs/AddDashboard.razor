<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            New dashboard
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="_dashboardName" Label="Name" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="CreateDashboard">Create</MudButton>
    </DialogActions>
</MudDialog>
@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Inject]
    ISnackbar Snackbar { get; set; }

    private string _dashboardName = "";

    private void Cancel() {
        MudDialog.Cancel();
    }

    private void CreateDashboard() {
        Snackbar.Add(_dashboardName + " created", Severity.Success);
        MudDialog.Close(DialogResult.Ok(true));
    }

}