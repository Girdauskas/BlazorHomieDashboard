<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Add Node
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="_nodeName" Label="New node name" Required="true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Add">Add</MudButton>
    </DialogActions>
</MudDialog>