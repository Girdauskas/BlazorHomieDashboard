<MudDialog  @onkeydown="HandleKeyDown">
    <DialogContent>
        <MudNumericField @bind-Value="Value" Variant="Variant.Outlined" Immediate="true" Adornment="Adornment.End" AdornmentText="@Unit" HideSpinButtons="true"></MudNumericField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Set">Set</MudButton>
    </DialogActions>
</MudDialog>