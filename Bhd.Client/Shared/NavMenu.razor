<MudNavMenu>
    <Condition Evaluation="_isScanning">
        <Match>
            <MudAlert Square="true" Severity="Severity.Info" Variant="Variant.Filled">Scanning...</MudAlert>
        </Match>
        
        <NotMatch>
            <MudButton OnClick="HandleRescanButtonClick" StartIcon="@Icons.Filled.Search" FullWidth="true" Variant="Variant.Text" Color="Color.Default">Rescan</MudButton>
        </NotMatch>
    </Condition>

    <MudNavGroup Icon="@Icons.Filled.List" Title="Ready Devices" Expanded="true">
        <Iterations Items="GetReadyDevices()">
            <MudNavLink Href="@("devices/" + context.Id)" Icon="@Icons.Filled.Apps" IconColor="Color.Success">
                @context.Name
            </MudNavLink>
        </Iterations>
    </MudNavGroup>

    <MudNavGroup Icon="@Icons.Filled.List" Title="Alerts" Expanded="true">
        <Iterations Items="GetAlertDevices()">
            <MudNavLink Href="@("devices/" + context.Id)" Icon="@Icons.Filled.Apps" IconColor="Color.Error">
                @context.Name
            </MudNavLink>
        </Iterations>
    </MudNavGroup>

    <MudNavGroup Icon="@Icons.Filled.List" Title="Lost Devices" Expanded="false">
        <Iterations Items="GetLostDevices()">
            <MudNavLink Href="@("devices/" + context.Id)" Icon="@Icons.Filled.Apps" IconColor="Color.Warning">
                @context.Name
            </MudNavLink>
        </Iterations>
    </MudNavGroup>

    <MudNavGroup Icon="@Icons.Filled.List" Title="Dashboards" Expanded="true">
        <Iterations Items="_dashboards">
            <MudNavLink Href="@("dashboards/" + context.Id)" Icon="@Icons.Filled.Dashboard">
                @context.Name
            </MudNavLink>
        </Iterations>

        <MudButton OnClick="HandleCreateDashboardClick" FullWidth="true" Variant="Variant.Text" Color="Color.Default">Create new</MudButton>
    </MudNavGroup>

</MudNavMenu>